

@{
    ViewData["Title"] = "Enter Field Notes";

}

@*A page linked from the single burial page where a researcher can enter/edit field notes.*@

@model Burial


<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Colorlib Templates">
    <meta name="author" content="Colorlib">
    <meta name="keywords" content="Colorlib Templates">

    <!-- Title Page-->
    <title>Au Register Forms by Colorlib</title>

    <!-- Icons font CSS-->
    <link href="~/lib/vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" media="all">
    <link href="~/lib/vendor/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" media="all">
    <!-- Font special for pages-->
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Vendor CSS-->
    <link href="~/lib/vendor/select2/select2.min.css" rel="stylesheet" media="all">
    <link href="~/lib/vendor/datepicker/daterangepicker.css" rel="stylesheet" media="all">

    <!-- Main CSS-->
    <link href="~/css/main.css" rel="stylesheet" media="all">
</head>

<body>
    <div class="card card-4">
        <div class="card-body">
            <h2 class="title">Registration Form</h2>
            <form method="POST">
                <div class="row row-space">
                    <div class="col-4">
                        <div class="input-group">
                            <label class="label">first name</label>
                            <input class="input--style-4" type="text" name="first_name">
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="input-group">
                            <label class="label">last name</label>
                            <input class="input--style-4" type="text" name="last_name">
                        </div>
                    </div>
                </div>
                <div class="row row-space">
                    <div class="col-4">
                        <div class="input-group">
                            <label class="label">Birthday</label>
                            <div class="input-group-icon">
                                <input class="input--style-4 js-datepicker" type="text" name="birthday">
                                <i class="zmdi zmdi-calendar-note input-icon js-btn-calendar"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="input-group">
                            <label class="label">Gender</label>
                            <div class="p-t-10">
                                <label class="radio-container m-r-45">
                                    Male
                                    <input type="radio" checked="checked" name="gender">
                                    <span class="checkmark"></span>
                                </label>
                                <label class="radio-container">
                                    Female
                                    <input type="radio" name="gender">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row row-space">
                    <div class="col-4">
                        <div class="input-group">
                            <label class="label">Email</label>
                            <input class="input--style-4" type="email" name="email">
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="input-group">
                            <label class="label">Phone Number</label>
                            <input class="input--style-4" type="text" name="phone">
                        </div>
                    </div>
                </div>
                <div class="input-group">
                    <label class="label">Subject</label>
                    <div class="rs-select2 js-select-simple select--no-search">
                        <select name="subject">
                            <option disabled="disabled" selected="selected">Choose option</option>
                            <option>Subject 1</option>
                            <option>Subject 2</option>
                            <option>Subject 3</option>
                        </select>
                        <div class="select-dropdown"></div>
                    </div>
                </div>
                <div class="p-t-15">
                    <button class="btn btn--radius-2 btn--blue" type="submit">Submit</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Jquery JS-->
    <script src="~/lib/vendor/jquery/jquery.min.js"></script>
    <!-- Vendor JS-->
    <script src="~/lib/vendor/select2/select2.min.js"></script>
    <script src="~/lib/vendor/datepicker/moment.min.js"></script>
    <script src="~/lib/vendor/datepicker/daterangepicker.js"></script>

    <!-- Main JS-->
    <script src="~/js/global.js"></script>

</body>

</html>
<!-- end document-->


<div class="text-center">
    <h1 class="display-4">Enter FieldNotes - Burial</h1>
</div>


<form asp-action="EnterFieldBurial" method="post">
    <div asp-validation-summary="All"></div>

    <div>
        <label asp-for="BurialNum">Burial Number:</label>
        <input asp-for="BurialNum" />
        <br />
    </div>

    <div>
        <label asp-for="ArtifactFound">Artifact Found:</label>
        <input asp-for="ArtifactFound" />
        <br />
    </div>

    <div>
        <label asp-for="ArtifactsDescription">Description of Artifact:</label>
        <input asp-for="ArtifactsDescription" />
        <br />
    </div>

    <div>
        <label asp-for="Cluster">Cluster</label>
        <input asp-for="Cluster" />
        <br />
    </div>

    <div>
        <label asp-for="Goods">Goods</label>
        <input asp-for="Goods" />
        <br />
    </div>

    <div>
        <label asp-for="BiologicalInitials">Biological Initials</label>
        <input asp-for="BiologicalInitials" />
        <br />
    </div>

    <div>
        <label asp-for="BiologicalClusterNum">Biological Cluster Number</label>
        <input asp-for="BiologicalClusterNum" />
        <br />
    </div>

    <div>
        <label asp-for="PreviouslySampled">Has The Burial Been Previously Sampled?</label>
        <input asp-for="PreviouslySampled" />
        <br />
    </div>

    <div>
        <label asp-for="BiologicalNotes">Biological Notes</label>
        <input asp-for="BiologicalNotes" />
        <br />
    </div>

    <div>
        <label asp-for="ToBeConfirmed">To Be Confirmed?</label>
        <input asp-for="ToBeConfirmed" />
        <br />
    </div>

    <div>
        <label asp-for="BurialSituation">What is the Burial Situation?</label>
        <input asp-for="BurialSituation" />
        <br />
    </div>


    <div hidden>
        <label asp-for="BurialId">BurialID</label>
        <input asp-for="BurialId" />
        <br />
    </div>
    <button type="submit">Add Field Note</button>

</form>


