
@model Location

<div class="text-center">
    <h1 class="display-4">Edit FieldNotes</h1>
</div>


<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Colorlib Templates">
    <meta name="author" content="Colorlib">
    <meta name="keywords" content="Colorlib Templates">

    <!-- Title Page-->
    <title></title>

    <!-- Icons font CSS-->
    <link href="~/lib/vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" media="all">
    <link href="~/lib/vendor/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" media="all">
    <!-- Font special for pages-->
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Vendor CSS-->
    <link href="~/lib/vendor/select2/select2.min.css" rel="stylesheet" media="all">
    <link href="~/lib/vendor/datepicker/daterangepicker.css" rel="stylesheet" media="all">

    <!-- Main CSS-->
    <link href="~/css/main.css" rel="stylesheet" media="all">
</head>

<body>
    <div class="card card-4">
        <div class="card-body">
            <h2 class="title">Edit Field Location Information</h2>
            <form asp-action="EditFieldLocation2" method="post">
                <div class="row row-space">
                    <div class="col-4">
                        <div class="input-group">
                            <label asp-for="MetersNs">Meters North South</label>
                            <input asp-for="MetersNs" class="input--style-4" />
                        </div>
                    </div>
                    <br />
                    <div class="col-4">
                        <div class="input-group">
                            <label asp-for="BurialNs">Burial North South</label>
                            <select asp-for="BurialNs">
                                <option value="N">N</option>
                                <option value="S">S</option>
                            </select>
                        </div>
                    </div>
                    <br />
                </div>
                <div class="row row-space">
                    <div class="col-4">
                        <div class="input-group">
                            <label asp-for="MetersEw">Meters East West</label>
                            <input asp-for="MetersEw" class="input--style-4" />
                        </div>
                    </div>
                    <br />
                    <div class="col-4">
                        <div class="input-group">
                            <label asp-for="BurialEw">Burial East West</label>
                            <select asp-for="BurialEw">
                                <option value="E">E</option>
                                <option value="W">W</option>
                            </select>
                        </div>
                    </div>
                    <br />
                </div>
                <div class="row row-space">
                    <div class="col-4">
                        <div class="input-group">
                            <label asp-for="Subplot">Subplot:</label>
                            <input asp-for="Subplot" class="input--style-4" />
                        </div>
                    </div>
                    <br />
                    <div class="col-4">
                        <div class="input-group">
                            <label asp-for="HillArea">Hill Area: </label>
                            <input asp-for="HillArea" class="input--style-4" value="0" />
                        </div>
                    </div>
                    <br />
                </div>
                <div class="row row-space">
                    <div class="col-4">
                        <div class="input-group">
                            <label asp-for="TombNum">Tomb Number: </label>
                            <input asp-for="TombNum" class="input--style-4" value="0" />
                        </div>
                    </div>
                    <br />

                    <div class="col-4">
                        <div class="input-group" hidden>
                            <label asp-for="LocId">LocationID</label>
                            <input asp-for="LocId" />
                        </div>
                    </div>
                </div>

                <div class="p-t-15">
                    <button class="btn btn--radius-2 btn--blue" type="submit">Submit</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Jquery JS-->
    <script src="~/lib/vendor/jquery/jquery.min.js"></script>
    <!-- Vendor JS-->
    <script src="~/lib/vendor/select2/select2.min.js"></script>
    <script src="~/lib/vendor/datepicker/moment.min.js"></script>
    <script src="~/lib/vendor/datepicker/daterangepicker.js"></script>

    <!-- Main JS-->
    <script src="~/js/global.js"></script>

</body>

</html>
<!-- end document-->
