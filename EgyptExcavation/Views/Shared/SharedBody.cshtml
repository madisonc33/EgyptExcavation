@model Body

<div class="row">
    <div class="col-sm-6">
        <div class="card">
            <h5 class="card-header">1. Sample</h5>
            <div class="card-body">
                <p class="card-text">Enter hair taken, textile taken, notes, and more here!</p>
                <form asp-action="EnterSample" method="get">
                    <div class="input-group" hidden>
                        <input name="BodyId" value="@Model.BodyId" />
                    </div>
                    <div class="p-t-15">
                        <button class="btn btn--radius-2 btn--blue" type="submit">Add</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <br />

    <div class="col-sm-6">
        <div class="card">
            <h5 class="card-header">2. Tooth</h5>
